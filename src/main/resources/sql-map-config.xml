<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
 	<!-- Alias 설정 -->
    <typeAliases>
    	<typeAlias type="com.inventory.app.domain.ItemVO" alias="item"/>
    	<typeAlias type="com.inventory.app.domain.ShopVO" alias="shop"/>
    	<typeAlias type="com.inventory.app.domain.UserVO" alias="user"/>
    	<typeAlias type="com.inventory.app.domain.CategoryVO" alias="category"/>
    	<typeAlias type="com.inventory.app.domain.StockVO" alias="stock"/>
    	<typeAlias type="com.inventory.app.domain.ItemInfoVO" alias="itemInfo"/>
    	<typeAlias type="com.inventory.app.domain.SoldLogVO" alias="soldLog"/>
    </typeAliases>
 
 	<!-- Sql Mapper 설정 -->
    <mappers>
        <mapper resource="mybatis/mapper/ItemMapper.xml"/>
        <mapper resource="mybatis/mapper/ShopMapper.xml"/>
        <mapper resource="mybatis/mapper/UserMapper.xml"/>
        <mapper resource="mybatis/mapper/CategoryMapper.xml"/>
        <mapper resource="mybatis/mapper/StockMapper.xml"/>
        <mapper resource="mybatis/mapper/ItemInfoMapper.xml"/>
        <mapper resource="mybatis/mapper/SoldLogMapper.xml"/>
    </mappers>
</configuration>